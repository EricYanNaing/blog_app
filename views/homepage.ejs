<%- include('./includes/header.ejs') %>
    <nav class="navbar">
        <a href="/" class="logo"> 
            blog.
        </a>
        <h1>New Blogs.</h1>
        <a href="/admin/create-post" class="btn">Create New Post</a>
    </nav>
    <hr>
    <h5 class="sub-header">New Posts !</h5>
    <section class="post-section">
        <% if(postsArr.length < 1) { %>
            <h4 class="nopost-info">There is no posts. Please upload new posts..</h4>
        <% } %>
        <% for(let post of postsArr) { %>
            <div class="post-box">
                <p class="post-title"><%= post.title %></p>
                <p class="post-description"><%= post.description %></p>
                <a href="" class="detail btn">See More</a>
            </div>
        <% } %>
    </section>
<%- include('./includes/footer.ejs') %>